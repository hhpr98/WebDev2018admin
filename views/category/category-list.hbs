<div class="product-status mg-b-30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <h4>Danh sách loại sản phẩm</h4>
                    <table>
                        <tr>
                            <th style="text-align:center;">id</th>
                            <th style="text-align:center;">Hình ảnh</th>
                            <th style="text-align:left;">Tên loại sản phẩm</th>
                            <th style="text-align:center;">icon class</th>
                            <th style="text-align:center;">Hành động</th>
                        </tr>
                        {{#each categoryList}}
                            <tr>
                                <td style="text-align:center;">{{id}}</td>
                                <td style="text-align:center;">
                                    <img src={{image}} alt="" />
                                </td>
                                <td>{{name}}</td>
                                <td style="text-align:center;">{{iclass}}</td>
                                <td style="text-align:center;">
                                    <a href="/dashboard/product/category/{{id}}">
                                        <button data-toggle="tooltip" title="Xem danh sách sản phẩm"
                                            class="pd-setting-ed">
                                            <i class="fa fa-info-circle" aria-hidden="true"></i>
                                        </button>
                                    </a>

                                </td>
                            </tr>
                        {{/each}}
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>