<!-- Single pro tab start-->
<div class="single-product-tab-area mg-b-30">
    <!-- Single pro tab review Start-->
    <div class="single-pro-review-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="review-tab-pro-inner">
                        <ul id="myTab3" class="tab-review-design">
                            <li class="active"><a href="#description"><i class="icon nalika-edit"
                                        aria-hidden="true"></i> Thông tin tài khoản</a></li>
                        </ul>
                        <div id="myTabContent" class="tab-content custom-product-edit nalika-edit">
                            <form method="POST" action="/account/updateInfo">
                                <div class="product-tab-list tab-pane fade active in" id="description">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h3>Tên người dùng</h3>
                                            <input id="ten" type="text" class="form-control" name="userName"
                                                value="{{user.name}}">
                                            <hr>
                                            <h3>Số điện thoại</h3>
                                            <input id="ten" type="text" class="form-control" name="userPhone"
                                                value={{user.phonenumber}}>
                                            <hr>
                                            <h3>Email</h3>
                                            <input id="ten" type="text" class="form-control" name="userEmail"
                                                value={{user.email}}>
                                            <hr>
                                            <h3>Địa chỉ</h3>
                                            <input id="ten" type="text" class="form-control" name="userAddress"
                                                value="{{user.address}}">
                                            <hr>
                                        </div>
                                        <div class="col-md-4">                                          
                                            <div class="image-container">
                                                <img class="d-flex justify-content-center" style="border-radius: 100%;" src="/img/avatar-default.jpg" alt="" />
                                            </div>                                                             
                                        </div>
                                    </div>
                                    <div class="row" style="margin-top: 20px;">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="text-center custom-pro-edt-ds">
                                                <button type="submit"
                                                    class="btn btn-ctl-bt waves-effect waves-light m-r-10">Sửa
                                                </button>
                                                <button type="button"
                                                    class="btn btn-ctl-bt waves-effect waves-light">Hủy
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


