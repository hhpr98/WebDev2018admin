<div class="product-status mg-b-30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <h4>Danh sách người dùng</h4>

                    <table>
                        <tr>
                            <th style="text-align:center;">Hình đại diện</th>
                            <th style="text-align:center;">Tên tài khoản</th>
                            <th style="text-align:center;">Tên người dùng</th>
                            <th style="text-align:left;">Số Điện Thoại</th>
                            <th style="text-align:center;">Email</th>
                            <th style="text-align:center;">Địa chỉ</th>
                            <th style="text-align:center;">Bị khóa</th>
                        </tr>
                        {{#each accountList}}
                            <tr>
                                <td style="text-align:center;">
                                    <img src={{image}} alt="Không thể tải ảnh" />
                                </td>
                                <td>{{username}}</td>
                                <td style="text-align:center;">{{name}} đ</td>
                                <td style="text-align:center;">{{phonenumber}}</td>
                                <td style="text-align:center;">{{eamil}}</td>
                                <td style="text-align:center;">{{address}}</td>
                                <td style="text-align:center;">{{isBanned}}</td>
                                <td style="text-align:center;">
                                    <a href="/dashboard/account/detail/{{id}}">
                                        <button data-toggle="tooltip" title="Chi tiết" class="pd-setting-ed"><i
                                                class="fa fa-info-circle" aria-hidden="true"></i>
                                        </button>
                                    </a>
                                    <a href="/dashboard/account/edit/{{id}}">
                                        <button data-toggle="tooltip" title="Sửa" class="pd-setting-ed"><i
                                                class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                        </button>
                                    </a>
                                    <a href="/dashboard/product/block/{{id}}"
                                        onclick="return confirm ('Bạn có muốn khóa tài khoản này?');">
                                        <button data-toggle=" tooltip" title="Khóa tài khoản" class="pd-setting-ed"><i
                                                class="fa fa-lock" aria-hidden="true" ></i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
                        {{/each}}
                    </table>
                    <div class="custom-pagination">
                        <ul class="pagination" style="margin-left:5%;">

                            {{#if pageCount}}
                                {{#if isPreviousPage}}
                                    <li class="page-item">
                                        <a class="page-link" href="/product?page={{previousPage}}">Trước</a>
                                    </li>
                                {{else}}
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#">Trước</a>
                                    </li>
                                {{/if}}

                                {{#each listPaginate}}
                                    <li class="page-item">
                                        <a class="page-link" href="/dashboard/product?page={{pageId}}">{{pageId}}</a>
                                    </li>
                                {{/each}}

                                {{#if isNextPage}}
                                    <li class="page-item">
                                        <a class="page-link" href="/dashboard/product?page={{nextPage}}">Sau</a>
                                    </li>
                                {{else}}
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#">Sau</a>
                                    </li>
                                {{/if}}
                            {{else}}
                                <h2 class="text-danger mt-5 mb-5 text-center">
                                    Ồ không!!!! không có sản phẩm nào ở đây cả. Vui lòng thử lại!
                                </h2>
                            {{/if}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>